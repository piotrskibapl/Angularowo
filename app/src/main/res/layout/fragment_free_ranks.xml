<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swiperefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_free_ranks"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/noRanksAvailableTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_rewards_found"
            android:textSize="@dimen/error_text_size"
            android:textAlignment="center"
            android:visibility="gone"
            android:layout_marginTop="@dimen/error_margin"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginEnd="@dimen/margin_default" />

        <include layout="@layout/no_internet_layout" />
        <include layout="@layout/account_banned_layout" />
    </FrameLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>