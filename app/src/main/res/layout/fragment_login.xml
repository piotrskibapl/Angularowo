<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="pl.piotrskiba.angularowo.login.viewmodel.LoginViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/login_header_margin_top"
                android:gravity="center_horizontal"
                android:text="@string/login_header"
                android:textAlignment="center"
                android:textSize="@dimen/login_header_text_size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/login_description_margin_top"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="@string/login_description"
                android:textAlignment="center" />

            <com.alimuzaffar.lib.pin.PinEntryEditText
                android:id="@+id/peet_accesstoken"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/login_pin_margin_top"
                android:cursorVisible="false"
                android:digits="1234567890"
                android:inputType="number"
                android:maxLength="6"
                android:paddingHorizontal="@dimen/login_pin_padding"
                android:textIsSelectable="false"
                android:textSize="@dimen/login_pin_text_size" />
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>