<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/player_list_item_padding"
    android:layout_marginBottom="@dimen/player_list_item_margin"
    android:background="@color/color_gracz"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_player_avatar"
        android:src="@drawable/default_avatar"
        android:layout_width="@dimen/avatar_size"
        android:layout_height="@dimen/avatar_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/tv_player_name"
            android:textSize="@dimen/username_text_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/tv_player_rank"
            android:textSize="@dimen/rank_text_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"/>
    </LinearLayout>

</LinearLayout>